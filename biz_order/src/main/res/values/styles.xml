<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="addNewAddress">
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="bottomLineAppearance">@style/lineAppearance</item>
        <item name="titleTextAppearance">@style/titleTextAppearance</item>
        <item name="inputType">text</item>
    </style>

    <style name="lineAppearance">
        <item name="color">@color/color_eee</item>
        <item name="height">1px</item>
        <item name="leftMargin">0dp</item>
        <item name="rightMargin">0dp</item>
        <item name="enable">true</item>
    </style>

    <style name="titleTextAppearance">
        <item name="titleColor">@color/color_565</item>
        <item name="titleSize">15sp</item>
        <item name="minWidth">100dp</item>
    </style>

</resources>